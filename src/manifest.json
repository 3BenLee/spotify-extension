{
  "name": "Mini Spotity Player",
  "version": "1.0",
  "description": "Spotify player extension",
  "permissions": [
    "contextMenus",
    "declarativeContent",
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/spotify-mini-player-16.png",
      "32": "images/spotify-mini-player-32.png",
      "48": "images/spotify-mini-player-48.png",
      "128": "images/spotify-mini-player-128.png"
    }
  },
  "icons": {
    "16": "images/spotify-mini-player-16.png",
    "32": "images/spotify-mini-player-32.png",
    "48": "images/spotify-mini-player-48.png",
    "128": "images/spotify-mini-player-128.png"
  }
}
